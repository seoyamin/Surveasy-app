<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.surveasy.surveasy.presentation.register.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_existUserFragment"
            app:destination="@id/existUserFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerAgreeFragment"
            app:destination="@id/registerAgreeFragment" />
    </fragment>
    <fragment
        android:id="@+id/existUserFragment"
        android:name="com.surveasy.surveasy.presentation.register.ExistUserFragment"
        android:label="ExistUserFragment" />
    <fragment
        android:id="@+id/registerAgreeFragment"
        android:name="com.surveasy.surveasy.presentation.register.RegisterAgreeFragment"
        android:label="RegisterAgreeFragment"
        tools:layout="@layout/fragment_register_agree">
        <action
            android:id="@+id/action_registerAgreeFragment_to_registerWarnFragment"
            app:destination="@id/registerWarnFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerWarnFragment"
        android:name="com.surveasy.surveasy.presentation.register.RegisterWarnFragment"
        android:label="RegisterWarnFragment"
        tools:layout="@layout/fragment_register_warn">
        <action
            android:id="@+id/action_registerWarnFragment_to_registerInput1Fragment"
            app:destination="@id/registerInput1Fragment" />
    </fragment>
    <fragment
        android:id="@+id/registerInput1Fragment"
        android:name="com.surveasy.surveasy.presentation.register.RegisterInput1Fragment"
        android:label="fragment_register_input1"
        tools:layout="@layout/fragment_register_input1" >
        <action
            android:id="@+id/action_registerInput1Fragment_to_registerInput2Fragment"
            app:destination="@id/registerInput2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/registerInput2Fragment"
        android:name="com.surveasy.surveasy.presentation.register.RegisterInput2Fragment"
        android:label="fragment_register_input2"
        tools:layout="@layout/fragment_register_input2" />
</navigation>