<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:id="@+id/ToolbarFirstSurvey"
        android:theme="@style/ToolbarTheme"
        android:background="@color/white"
        app:titleTextColor="@color/black"/>


    <LinearLayout
        android:id="@+id/SurveyListFirstSurvey2_Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SurveyListFirstSurvey2_DistrictText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="거주지역"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/SurveyListFirstSurvey2_DistrictSpinner"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingVertical="5dp" />

            <Spinner
                android:id="@+id/SurveyListFirstSurvey2_CitySpinner"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:paddingVertical="5dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/SurveyListFirstSurvey2_PetText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="반려동물"
                android:textColor="@color/black" />

            <RadioGroup
                android:id="@+id/SurveyListFirstSurvey2_PetRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/SurveyListFirstSurvey2_PetDog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:gravity="center"
                    android:button="@null"
                    android:text="반려견"
                    android:textColor="@drawable/selector_radio_text"/>

                <RadioButton
                    android:id="@+id/SurveyListFirstSurvey2_PetCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:gravity="center"
                    android:button="@null"
                    android:text="반려묘"
                    android:textColor="@drawable/selector_radio_text"/>

                <RadioButton
                    android:id="@+id/SurveyListFirstSurvey2_PetEtc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:gravity="center"
                    android:button="@null"
                    android:text="기타"
                    android:textColor="@drawable/selector_radio_text"/>

                <RadioButton
                    android:id="@+id/SurveyListFirstSurvey2_PetNone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:gravity="center"
                    android:button="@null"
                    android:text="없음"
                    android:textColor="@drawable/selector_radio_text"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/SurveyListFirstSurvey2_MarriedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="혼인 여부"
                android:textColor="@color/black" />

            <RadioGroup
                android:id="@+id/SurveyListFirstSurvey2_MarriedRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/SurveyListFirstSurvey2_MarriedYet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:gravity="center"
                    android:button="@null"
                    android:text="미혼"
                    android:textColor="@drawable/selector_radio_text"/>

                <RadioButton
                    android:id="@+id/SurveyListFirstSurvey2_Married"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:gravity="center"
                    android:button="@null"
                    android:text="기혼"
                    android:textColor="@drawable/selector_radio_text"/>

                <RadioButton
                    android:id="@+id/SurveyListFirstSurvey2_MarriedDivorce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:gravity="center"
                    android:button="@null"
                    android:text="이혼"
                    android:textColor="@drawable/selector_radio_text"/>

            </RadioGroup>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SurveyListFirstSurvey2_FamilyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가구 형태"
                android:textColor="@color/black" />

            <RadioGroup
                android:id="@+id/SurveyListFirstSurvey2_FamilyRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/SurveyListFirstSurvey2_Family1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:gravity="center"
                    android:button="@null"
                    android:text="1인가구"
                    android:textAlignment="center"
                    android:textColor="@drawable/selector_radio_text" />

                <RadioButton
                    android:id="@+id/SurveyListFirstSurvey2_Family2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:gravity="center"
                    android:button="@null"
                    android:text="2인가구"
                    android:textAlignment="center"
                    android:textColor="@drawable/selector_radio_text" />

                <RadioButton
                    android:id="@+id/SurveyListFirstSurvey2_Family3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:gravity="center"
                    android:button="@null"
                    android:text="3인가구"
                    android:textAlignment="center"
                    android:textColor="@drawable/selector_radio_text" />

                <RadioButton
                    android:id="@+id/SurveyListFirstSurvey2_Family4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:gravity="center"
                    android:button="@null"
                    android:text="4인가구 이상"
                    android:textAlignment="center"
                    android:textColor="@drawable/selector_radio_text" />
            </RadioGroup>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SurveyListFirstSurvey2_HousingTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="거주 주택 형태"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/SurveyListFirstSurvey2_HousingTypeSpinner"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:paddingVertical="10dp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/SurveyListFirstSurvey2_Btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#717171"
        android:text="제출하기" />



</LinearLayout>