<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:id="@+id/ToolbarFirstSurvey"
        android:theme="@style/ToolbarTheme"
        android:background="@color/white"
        app:titleTextColor="@color/black"/>

    <LinearLayout
        android:id="@+id/SurveyListFirstSurvey_Container"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:id="@+id/SurveyListFirstSurvey_Question30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="혼인 여부"
            android:textColor="@color/black"
            />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미혼"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기혼" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이혼" />

        </RadioGroup>

        <TextView
            android:id="@+id/SurveyListFirstSurvey_Question40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="병역 이행 여부"
            />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="군필"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미필" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="해당사항 없음" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/SurveyListFirstSurvey_Question2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반려동물"
                android:textColor="@color/black"
                />
            <Spinner
                android:id="@+id/SurveyListFirstSurvey_Answer2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/SurveyListFirstSurvey2_Btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#717171"
        android:text="next" />



</LinearLayout>