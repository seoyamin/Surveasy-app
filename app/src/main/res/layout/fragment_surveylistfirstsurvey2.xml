<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:id="@+id/ToolbarFirstSurvey"
        android:theme="@style/ToolbarTheme"
        android:background="@color/white"
        app:titleTextColor="@color/black"/>

    <LinearLayout
        android:id="@+id/SurveyListFirstSurvey_Container"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/SurveyListFirstSurvey_DistrictText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="거주지역"
                android:textColor="@color/black"
                />
            <Spinner
                android:id="@+id/SurveyListFirstSurvey_DistrictSpinner"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:layout_marginBottom="20dp"
                />
            <Spinner
                android:id="@+id/SurveyListFirstSurvey_CitySpinner"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/SurveyListFirstSurvey_MarriedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="혼인 여부"
            android:textColor="@color/black"
            />

        <RadioGroup
            android:id="@+id/SurveyListFirstSurvey_MarriedRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미혼"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기혼" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이혼" />

        </RadioGroup>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/SurveyListFirstSurvey_PetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반려동물"
                android:textColor="@color/black"
                />
            <Spinner
                android:id="@+id/SurveyListFirstSurvey_PetSpinner"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/SurveyListFirstSurvey_HouseholdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가구 형태"
                android:textColor="@color/black" />

            <RadioGroup
                android:id="@+id/SurveyListFirstSurvey_HouseholdRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <GridLayout
                    android:id="@+id/MyViewContact_FAQItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:columnCount="2" >

                    <RadioButton
                        android:id="@+id/RegisterFragment1_Radio1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_radio_button"
                        android:textColor="@drawable/selector_radio_text"
                        android:button="@null"
                        android:text="1인가구"
                        android:textAlignment="center" />
                    <RadioButton
                        android:id="@+id/RegisterFragment1_Radio2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_radio_button"
                        android:textColor="@drawable/selector_radio_text"
                        android:button="@null"
                        android:text="2인가구"
                        android:textAlignment="center" />
                    <RadioButton
                        android:id="@+id/RegisterFragment1_Radio3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_radio_button"
                        android:textColor="@drawable/selector_radio_text"
                        android:button="@null"
                        android:text="3인가구"
                        android:textAlignment="center" />
                    <RadioButton
                        android:id="@+id/RegisterFragment1_Radio4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_radio_button"
                        android:textColor="@drawable/selector_radio_text"
                        android:button="@null"
                        android:text="4인가구 이상"
                        android:textAlignment="center" />

                    </GridLayout>
            </RadioGroup>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/SurveyListFirstSurvey_HousingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="거주 주택 형태"
                android:textColor="@color/black"
                />
            <Spinner
                android:id="@+id/SurveyListFirstSurvey_HousingSpinner"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/SurveyListFirstSurvey2_Btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#717171"
        android:text="next" />



</LinearLayout>