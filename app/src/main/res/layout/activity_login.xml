<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="center"
            android:layout_marginTop="60sp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/surveasy_logo" />

            <TextView
                android:id="@+id/Login_Title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="에"
                android:textSize="30sp"
                android:textColor="#000000"
                android:fontFamily="@font/main_font_b" />

        </LinearLayout>

        <TextView
            android:id="@+id/Login_Title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="center"
            android:text="오신 것을 환영합니다. "
            android:textSize="30sp"
            android:textColor="#000000"
            android:fontFamily="@font/main_font_b"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/Login_InputEmail"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:paddingLeft="20sp"
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                android:textColor="#000000"
                android:fontFamily="@font/main_font_m"
                android:hint="아이디 (이메일)"
                android:textColorHint="#c9c9c9"
                android:background="@drawable/custom_input"
                android:textCursorDrawable="@drawable/custom_input_cursor"/>

            <EditText
                android:id="@+id/Login_InputPW"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_marginHorizontal="5dp"
                android:paddingLeft="20sp"
                android:inputType="textPassword"
                android:textSize="15sp"
                android:textColor="#000000"
                android:fontFamily="@font/main_font_m"
                android:hint="비밀번호"
                android:textColorHint="#c9c9c9"
                android:background="@drawable/custom_input"
                android:textCursorDrawable="@drawable/custom_input_cursor"/>

            <CheckBox
                android:id="@+id/Login_AutoLogin"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:buttonTint="#0aab00"
                android:text="자동 로그인"
                android:textSize="12sp"
                android:textColor="#707070"
                android:fontFamily="@font/main_font_m"
                android:checked="true" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Login_Btn"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/register_button"
                android:backgroundTint="#0aab00"
                android:fontFamily="@font/main_font_b"
                android:text="로그인"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Login_Register"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_gravity="center"
                android:layout_marginTop="8sp"
                android:layout_marginHorizontal="5dp"
                android:text="패널 가입"
                android:textSize="16sp"
                android:textColor="#707070"
                android:fontFamily="@font/main_font_b"
                android:background="@drawable/login_button" />

            <TextView
                android:id="@+id/Login_FindPw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="12sp"
                android:textSize="13sp"
                android:text="비밀번호 찾기 >"
                android:fontFamily="@font/main_font_m" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>