<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="50sp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="5sp"
        android:paddingHorizontal="25sp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/MyView_UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10sp"
            android:text="최진혁 님"
            android:textSize="25sp"
            android:textColor="#000000"
            android:fontFamily="@font/main_font_b"/>

        <ImageView
            android:id="@+id/MyView_NoticeIcon"
            android:layout_width="30sp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            app:srcCompat="@drawable/my_notice" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270sp"
            android:padding="30sp"
            android:orientation="vertical"
            android:background="@drawable/my_center_gradient" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="5sp"
                    android:text="정산 완료 금액"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:fontFamily="@font/main_font_b" />

                <TextView
                    android:id="@+id/MyView_UserRewardFinAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="5sp"
                    android:text="120,300원"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:fontFamily="@font/main_font_b" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:layout_marginTop="8sp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginRight="3sp"
                    android:gravity="center"
                    android:background="@drawable/home_top_container"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/MyView_UserSurveyCountAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="130개"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:fontFamily="@font/main_font_b" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="참여 설문"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:fontFamily="@font/main_font_m" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="3sp"
                    android:gravity="center"
                    android:background="@drawable/home_top_container"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/MyView_UserRewardYetAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1300원"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:fontFamily="@font/main_font_b" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="정산 예정 금액"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:fontFamily="@font/main_font_m" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text="정산일은 매월 10일, 20일, 30일입니다."
                android:textSize="13sp"
                android:fontFamily="@font/main_font_m"
                android:textColor="#FFFFFF" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:layout_marginTop="220sp"
            android:background="@drawable/my_bottom"
            android:orientation="vertical"
            android:paddingVertical="20sp"
            android:paddingHorizontal="30sp">

            <LinearLayout
                android:id="@+id/MyView_HistoryIcon"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingLeft="10sp">

                <ImageView
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:layout_gravity="center"
                    android:src="@drawable/my_history" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/main_font_b"
                    android:paddingLeft="10sp"
                    android:text="정산 내역 보기"
                    android:textColor="#000000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#66bcbcbc" />


            <LinearLayout
                android:id="@+id/MyView_InfoIcon"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingLeft="10sp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="1sp"
                    android:src="@drawable/my_info" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/main_font_b"
                    android:paddingLeft="10sp"
                    android:text="회원정보 수정"
                    android:textColor="#000000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#66bcbcbc" />


            <LinearLayout
                android:id="@+id/MyView_SettingIcon"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingLeft="10sp">

                <ImageView
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:layout_gravity="center"
                    android:src="@drawable/my_setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/main_font_b"
                    android:paddingLeft="10sp"
                    android:text="설정"
                    android:textColor="#000000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#66bcbcbc" />


            <LinearLayout
                android:id="@+id/MyView_ContactIcon"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingLeft="10sp">

                <ImageView
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:layout_gravity="center"
                    android:src="@drawable/my_contact" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/main_font_b"
                    android:paddingLeft="10sp"
                    android:text="문의하기"
                    android:textColor="#000000" />

            </LinearLayout>


        </LinearLayout>


    </FrameLayout>


</LinearLayout>




