<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/MyViewHistory_BackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00000000"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <LinearLayout
        android:id="@+id/MyViewHistory_TitleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/MyViewHistory_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="내역 보기"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:backgroundTint="@color/white"
            android:text="정산 대기"
            android:textColor="@color/black" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:backgroundTint="@color/white"
            android:text="정산 내역"
           android:textColor="@color/black" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/MyViewHistory_MainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/MyViewHistory_Wait"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:paddingRight="40dp">

                <TextView
                    android:id="@+id/MyViewHistory_WaitText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="정산 대기 금액"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/MyViewHistory_WaitAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,700원"
                    android:textSize="25dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/MyViewHistory_WaitItemContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/MyViewHistory_WaitItem"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/MyViewHistory_WaitItemDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22.01.13" />

                        <TextView
                            android:id="@+id/MyViewHistory_WaitItemTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="대학생을 위한 설문 플랫폼" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/MyViewHistory_WaitItemReward"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:text="400"
                        android:textColor="@color/white"
                        android:background="@color/black"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/MyViewHistory_Fin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:paddingRight="40dp">

                <TextView
                    android:id="@+id/MyViewHistory_FinText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="정산 대기 금액"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/MyViewHistory_FinAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,700원"
                    android:textSize="25dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/MyViewHistory_FinItemContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/MyViewHistory_FinItem"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/MyViewHistory_FinItemDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22.01.13" />

                        <TextView
                            android:id="@+id/MyViewHistory_FinItemTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="대학생을 위한 설문 플랫폼" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/MyViewHistory_FinItemReward"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:text="400"
                        android:textColor="@color/white"
                        android:background="@color/black"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>



</LinearLayout>