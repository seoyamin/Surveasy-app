<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/MyViewInfo_InfoItem_PhoneNumberContainer"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:gravity="center" >

        <TextView
            android:id="@+id/MyViewInfo_InfoItem_PhoneNumberTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="전화번호"
            android:textColor="#000000"
            android:textSize="15sp"
            android:fontFamily="@font/main_font_b" />

        <EditText
            android:id="@+id/MyViewInfo_InfoItem_PhoneNumberEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:fontFamily="@font/main_font_r"
            android:gravity="right"
            android:inputType="phone"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="15sp"
            android:backgroundTint="#0aab00"
            android:textCursorDrawable="@drawable/custom_input_cursor" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/MyViewInfo_InfoItem_AccountNumberContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="5sp">

        <TextView
            android:id="@+id/MyViewInfo_InfoItem_AccountNumberTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="계좌번호"
            android:textColor="#000000"
            android:textSize="15sp"
            android:fontFamily="@font/main_font_b" />

        <Spinner
            android:id="@+id/MyViewInfo_InfoItem_AccountTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:paddingLeft="10sp"
            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="20sp"
            android:spinnerMode="dropdown"
            android:background="@drawable/custom_spinner"
            android:textColor="#000000"
            android:textSize="13sp"
            android:fontFamily="@font/main_font_r" />

        <EditText
            android:id="@+id/MyViewInfo_InfoItem_AccountNumberEdit"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:paddingLeft="15sp"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="17sp"
            android:background="@drawable/custom_input"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:textSize="15sp"
            android:fontFamily="@font/main_font_r"
            android:inputType="number"
            android:textCursorDrawable="@drawable/custom_input_cursor" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/MyViewInfo_InfoItem_EngSurveyContainer"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/MyViewInfo_InfoItem_EngSurveyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/main_font_b"
            android:text="영어설문희망"
            android:textColor="#000000"
            android:textSize="15sp" />

        <Switch
            android:id="@+id/MyViewInfo_InfoItem_EngSurveySwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/main_font_r"
            android:paddingRight="10sp"
            android:switchPadding="15sp"
            android:text="희망하지 않음"
            android:textColor="#000000"
            android:textSize="15sp"
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/switch_track_selector" />


    </LinearLayout>


</LinearLayout>