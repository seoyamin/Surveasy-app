<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.AuthProcessActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/authDialogImg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/authDialogText"
        android:src="@drawable/checkimg"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/authDialogImg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="본인 인증 처리 중 ..."
        android:fontFamily="@font/main_font_sb"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:id="@+id/authDialogText"/>

    <androidx.appcompat.widget.AppCompatButton
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/authDialogText"
        android:layout_marginTop="30dp"
        android:id="@+id/authDoneBtn"
        android:layout_width="wrap_content"
        android:paddingHorizontal="100dp"
        android:layout_height="45sp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/register_button"
        android:backgroundTint="#0aab00"
        android:fontFamily="@font/main_font_b"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</androidx.constraintlayout.widget.ConstraintLayout>