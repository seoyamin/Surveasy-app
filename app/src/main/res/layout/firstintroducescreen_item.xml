<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/FirstIntroduceScreen_ImageView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/FirstIntroduceScreen_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="서베이지"
        android:textSize="19sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/FirstIntroduceScreen_Title_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="서베이지"
        android:textSize="19sp"
        android:textColor="#0aab00"
        android:textStyle="bold"
        android:layout_marginTop="7dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/FirstIntroduceScreen_Content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="서베이지 서베이지"
        android:textSize="13dp"
        android:textColor="#848484"
        android:textStyle="bold"
        android:padding="3sp"
        android:layout_marginTop="22dp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/FirstIntroduceScreen_StartBtn"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:text="시작하기"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/register_button"
            android:backgroundTint="#0aab00"
            android:visibility="invisible" />

</LinearLayout>