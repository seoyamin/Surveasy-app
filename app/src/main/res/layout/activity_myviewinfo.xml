<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/MyViewInfo_BackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00000000"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <LinearLayout
        android:id="@+id/MyViewInfo_TitleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/MyViewInfo_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="나의 정보"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/MyViewInfo_MainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:padding="20dp">

        <Button
            android:id="@+id/MyViewInfoInfoEditBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정하기"
            android:layout_gravity="right" />

        <LinearLayout
            android:id="@+id/MyViewInfo_InfoItem_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/MyViewInfo_InfoItem_NameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="18dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/MYViewInfo_NameInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:textSize="18dp"
                    android:hint="김설문"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/MyViewInfo_InfoItem_Account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/MyViewInfo_InfoItem_AccountTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계좌"
                android:textSize="18dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/MyViewInfo_InfoItem_AccountSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/MyViewInfo_AccountInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:textSize="18dp"
                        android:hint="1234-56788-999999"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
        android:id="@+id/MyViewInfo_InfoItem_Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/MyViewInfo_InfoItem_PhoneTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호"
            android:textSize="18dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/MYViewInfo_PhoneInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textSize="18dp"
                android:hint="010-1234-5678"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


    </LinearLayout>

</LinearLayout>