<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/SurveyListFirstSurvey_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Survey"
        android:textSize="30sp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/SurveyListFirstSurvey_Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:id="@+id/SurveyListFirstSurvey_Question1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="질문 1"
            android:textColor="@color/black"
            />
        <Spinner
            android:id="@+id/SurveyListFirstSurvey_Answer1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:id="@+id/SurveyListFirstSurvey_Question2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="질문 2"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/SurveyListFirstSurvey_Answer2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            />






    </LinearLayout>
    <Button
        android:id="@+id/SurveyListFirstSurvey_Btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#717171"
        android:text="제출하기" />



</LinearLayout>