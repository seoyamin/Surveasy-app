<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/MyViewSettingPush_BackBtn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="#00000000"
        app:layout_constraintBottom_toBottomOf="@+id/MyViewSettingPush_Top"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <LinearLayout
        android:id="@+id/MyViewSettingPush_Top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/MyViewSettingPush_Icon"
            android:layout_width="54dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_popup_reminder" />

        <TextView
            android:id="@+id/MyViewSettingPush_Title"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:paddingLeft="5dp"
            android:text="알림 설정"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="530dp"
        >

        <Button
            android:id="@+id/MyViewSettingPush_PushText"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:backgroundTint="@color/white"
            android:text="푸쉬 알림 설정"
            android:textColor="@color/black"

            />



    </LinearLayout>

</LinearLayout>