<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/MyViewInvite_BackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00000000"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <LinearLayout
        android:id="@+id/MyViewInvite_TitleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/MyViewInvite_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="패널 초대"
            android:textSize="24sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/MyViewInvite_MainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_gravity="center" >

        <LinearLayout
            android:id="@+id/MyViewInvite_NumContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center" >

            <TextView
                android:id="@+id/MyViewInvite_NumTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 고유번호"
                android:textStyle="bold"
                android:textSize="20dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/MyViewInvite_NumInput"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center" >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="300dp"
                    android:layout_height="50dp" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/MyViewInvite_GuideText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="패널 초대 관련 안내입니다.\n패널 초대 관련 안내입니다.\n 패널 초대 관련 안내입니다. "
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/MyViewInvite_Image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:backgroundTint="#00000000"
            app:srcCompat="@android:drawable/ic_menu_myplaces" />

        <Button
            android:id="@+id/MyViewInvite_InviteBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="패널 초대하기" />
    </LinearLayout>





</LinearLayout>