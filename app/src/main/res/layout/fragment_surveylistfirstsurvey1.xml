<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:id="@+id/ToolbarFirstSurvey"
        android:theme="@style/ToolbarTheme"
        android:background="@color/white"
        app:titleTextColor="@color/black"/>

    <LinearLayout
        android:id="@+id/SurveyListFirstSurvey1_Container"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*보다 많은 설문조사를 전달해 드리기 위해 기초 정보 조사를 실시합니다. 해당 응답 내용을 바탕으로 설문 대상이 분류되므로, 정확한 응답 부탁드립니다."
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/SurveyListFirstSurvey1_JobText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="직업"
                android:textColor="@color/black"
                />
            <Spinner
                android:id="@+id/SurveyListFirstSurvey1_JobSpinner"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:layout_marginBottom="20dp"
                />
            <Spinner
                android:id="@+id/SurveyListFirstSurvey1_MajorSpinner"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:layout_marginBottom="20dp"
                android:visibility="invisible"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/SurveyListFirstSurvey1_UniversityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대학명"
                android:textColor="@color/black"
                />

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinner_view"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

<!--            <Spinner-->
<!--                android:id="@+id/SurveyListFirstSurvey1_UniversitySpinner"-->
<!--                android:layout_width="200dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:paddingVertical="10dp"-->
<!--                android:layout_marginBottom="20dp" />-->
        </LinearLayout>

        <TextView
            android:id="@+id/SurveyListFirstSurvey1_EngSurveyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영어 설문 참여 의사"
            android:textColor="@color/black"
            />

        <RadioGroup
            android:id="@+id/SurveyListFirstSurvey1_EngSurveyRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/SurveyListFirstSurvey1_EngSurvey_O"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="희망함"
                android:checked="true" />

            <RadioButton
                android:id="@+id/SurveyListFirstSurvey1_EngSurvey_X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="희망하지 않음" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/SurveyListFirstSurvey1_MilitaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="병역필여부"
                android:textColor="@color/black" />

            <RadioGroup
                android:id="@+id/SurveyListFirstSurvey1_MilitaryRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/SurveyListFirstSurvey1_MilitaryDone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:textColor="@drawable/selector_radio_text"
                    android:button="@null"
                    android:text="군필"
                    android:textAlignment="center" />
                <RadioButton
                    android:id="@+id/SurveyListFirstSurvey1_MilitaryYet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:textColor="@drawable/selector_radio_text"
                    android:button="@null"
                    android:text="미필"
                    android:textAlignment="center" />
                <RadioButton
                    android:id="@+id/SurveyListFirstSurvey1_MilitaryNA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:textColor="@drawable/selector_radio_text"
                    android:button="@null"
                    android:text="해당사항 없음"
                    android:textAlignment="center" />

            </RadioGroup>

        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/SurveyListFirstSurvey1_Btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#717171"
        android:text="next" />



</LinearLayout>