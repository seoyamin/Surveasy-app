<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:paddingTop="20sp" >

            <TextView
                android:id="@+id/MyViewHistory_WaitAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0원"
                android:textSize="15sp"
                android:textColor="#000000"
                android:fontFamily="@font/main_font_eb"
                android:gravity="center" />

            <TextView
                android:id="@+id/MyViewHistory_WaitText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="정산 예정 금액"
                android:textSize="13sp"
                android:textColor="#000000"
                android:fontFamily="@font/main_font_m"
                android:gravity="center" />

            <Button
                android:id="@+id/historyWait_moreBtn"
                android:layout_width="50sp"
                android:layout_height="15sp"
                android:layout_gravity="right"
                android:background="#e2e2e2"
                android:text="더 불러오기"
                android:textSize="8sp"
                android:fontFamily="@font/main_font_r" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e2e2e2"
                android:layout_marginTop="10sp" />


        </LinearLayout>



    </LinearLayout>



    <TextView
        android:id="@+id/historyWait_noneText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/historyWaitRecyclerContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </ScrollView>



</LinearLayout>