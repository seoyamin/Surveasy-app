<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        // app:layout_constraintBottom_BottomOf="@+id/BottomNavHome"


        <TextView
            android:id="@+id/Home_GreetingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="안녕하세요, ID 님!"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingTop="40dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>


        <TextView
            android:id="@+id/Home_SettlementText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정산 예정금액"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:paddingEnd="20dp"/>
        <TextView
            android:id="@+id/Home_RewardAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="$10000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingEnd="20dp"/>

        <LinearLayout
            android:id="@+id/Home_Banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="배너"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="배너"/>


        </LinearLayout>

        <Button
            android:id="@+id/HomeToList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List" />
        <Button
            android:id="@+id/HomeToMy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My" />
        <Button
            android:id="@+id/HomeToRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>