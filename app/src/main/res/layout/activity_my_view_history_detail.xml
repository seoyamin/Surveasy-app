<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".my.history.MyViewHistoryDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ToolbarHistoryDetail"
        android:theme="@style/ToolbarTheme"
        android:layout_marginBottom="30dp"
        android:paddingTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        app:titleTextColor="@color/black">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/main_font_sb"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:lineSpacingExtra="3.3sp"
            android:layout_gravity="center_horizontal"

            android:text="참여 상세 내역"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/historyDetailLogo"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:src="@drawable/surveasy_logo"
        app:layout_constraintTop_toBottomOf="@id/ToolbarHistoryDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/historyDetailType"
        android:text="참여 리서치"
        app:layout_constraintTop_toBottomOf="@id/historyDetailLogo"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="80dp"
        android:fontFamily="@font/main_font_sb"
        android:textSize="11dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/historyDetailDate"
        android:text="참여 일자"
        app:layout_constraintTop_toBottomOf="@id/historyDetailType"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="80dp"
        android:fontFamily="@font/main_font_sb"
        android:textSize="11dp"
        android:textColor="@color/black"/>


    <Button
        android:id="@+id/MyViewHistory_reuploadBtn"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="재첨부"/>

</androidx.constraintlayout.widget.ConstraintLayout>