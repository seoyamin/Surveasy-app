<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".my.history.MyViewHistoryDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ToolbarHistoryDetail"
        android:theme="@style/ToolbarTheme"
        android:layout_marginBottom="30dp"
        android:paddingTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        app:titleTextColor="@color/black">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/main_font_sb"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:lineSpacingExtra="3.3sp"
            android:layout_gravity="center_horizontal"

            android:text="참여 상세 내역"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ToolbarHistoryDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/historyDetailLogo"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:src="@drawable/surveasy_logo"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/historyDetailType"
                android:text="참여 리서치"
                android:paddingStart="80dp"
                android:fontFamily="@font/main_font_sb"
                android:textSize="11dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/historyDetailDate"
                android:text="참여 일자"
                android:paddingStart="80dp"
                android:fontFamily="@font/main_font_sb"
                android:textSize="11dp"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/historyDetailLine1"
                android:src="@drawable/vector"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/historyDetailTitle"
                    android:text="설문 제목"
                    android:paddingStart="80dp"
                    android:paddingEnd="30dp"
                    android:fontFamily="@font/main_font_sb"
                    android:textSize="11dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100원"
                    android:fontFamily="@font/main_font_sb"
                    android:textSize="11dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/historyDetailLine2"
                android:src="@drawable/vector"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/historyDetailFinTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설문 완료 화면"
                android:fontFamily="@font/main_font_sb"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:layout_width="215dp"
                android:layout_height="387dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:id="@+id/historyDetailLastCapture"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="※화면 변경 시, 기존에 제출했던 화면은 삭제됩니다."
                android:textSize="12dp"
                android:fontFamily="@font/main_font_sb"
                android:textColor="#FF0000"
                android:textFontWeight="400"
                android:layout_gravity="center"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/historyDetailUploadBtn"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="25sp"
                android:fontFamily="@font/main_font_b"
                android:text="설문 완료 화면 변경하기"
                android:lineSpacingExtra="3.3sp"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:backgroundTint="#0aab00"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/register_button" />



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>