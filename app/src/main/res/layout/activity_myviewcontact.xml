<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    android:background="#FFFFFF">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/ToolbarMyViewContact"
        android:theme="@style/ToolbarTheme"
        android:background="@color/white"
        app:titleTextColor="@color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/main_font_sb"
            android:textColor="@color/black"
            android:lineSpacingExtra="3.3sp"
            android:layout_gravity="center_horizontal"
            android:text="문의하기"
            android:id="@+id/MyViewContact_Title"
            android:textSize="20sp"/>
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        android:layout_marginHorizontal="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:orientation="horizontal"
            android:layout_marginVertical="7sp"
            android:layout_marginHorizontal="5sp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1:1 문의 및 제휴 문의"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="@font/main_font_m" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2sp"
                    android:text="official@gosurveasy.com"
                    android:textColor="#707070"
                    android:textSize="13sp"
                    android:fontFamily="@font/main_font_r" />

            </LinearLayout>


            <Button
                android:id="@+id/MyViewContact_Email"
                android:layout_width="100sp"
                android:layout_height="39sp"
                android:layout_gravity="center"
                android:background="@drawable/register_button"
                android:text="복사하기"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/main_font_b"/>


        </LinearLayout>





    </LinearLayout>


</LinearLayout>