<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    android:background="#FFFFFF">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:id="@+id/ToolbarMyViewSettingVersion"
        android:theme="@style/ToolbarTheme"
        android:background="@color/white"
        app:titleTextColor="@color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/main_font_sb"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:lineSpacingExtra="3.3sp"
            android:layout_gravity="center_horizontal"
            android:text="버전정보"
            android:id="@+id/MyViewSettingVersion_Title"
            android:textSize="20sp"/>
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center" >

        <ImageView
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:src="@drawable/checkimg" />

        <TextView
            android:id="@+id/MyViewSettingVersion_Notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="22sp"
            android:layout_marginBottom="5sp"
            android:text="최신 버전을 사용중입니다."
            android:textColor="#000000"
            android:textSize="17dp"
            android:fontFamily="@font/main_font_m" />

        <TextView
            android:id="@+id/MyViewSettingVersion_Version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="현재 버전 1.0"
            android:textColor="#707070"
            android:textSize="15dp"
            android:fontFamily="@font/main_font_r" />

    </LinearLayout>


</LinearLayout>