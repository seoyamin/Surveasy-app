<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Surveylist_listItemBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/SurveyList_ItemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/custom_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:paddingStart="15dp"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/ListItem_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/main_font_sb"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                android:text="제목"
                android:layout_marginBottom="5sp"
                />
            <TextView
                android:id="@+id/ListItem_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textStyle="normal"
                android:fontFamily="@font/main_font_m"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                android:text="대상"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/ListItem_spendTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:fontFamily="@font/main_font_sb"
                android:textColor="#5B5B5B"
                app:layout_constraintStart_toStartOf="parent"
                android:text="소요시간"
                android:textStyle="normal"
                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="15sp"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:paddingEnd="12sp"
            android:layout_weight="1"
            android:paddingStart="10sp"
            >

            <TextView
                android:id="@+id/ListItem_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:fontFamily="@font/main_font_sb"
                android:textColor="#0aab00"
                app:layout_constraintStart_toStartOf="parent"
                android:text="리워드"
                android:layout_marginBottom="5sp" />
            <TextView
                android:id="@+id/ListItem_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="11sp"
                android:textStyle="normal"
                android:fontFamily="@font/main_font_sb"
                android:textColor="#373737"
                app:layout_constraintStart_toStartOf="parent"
                android:text="마감"
                android:layout_marginBottom="5dp"
                />



        </LinearLayout>






    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>