<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Homelist_listItemBox"
    android:layout_width="match_parent"
    android:layout_height="50sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/HomeList_ItemContainer"
        android:layout_width="match_parent"
        android:layout_height="43sp"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="3sp"
        android:paddingHorizontal="7sp"
        android:background="@drawable/home_bottom_list_item"
        android:elevation="2sp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/HomeListItem_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="12sp"
            android:layout_weight="1"
            android:fontFamily="@font/main_font_m"
            android:text="제목"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/HomeListItem_Reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="6"
            android:fontFamily="@font/main_font_b"
            android:gravity="left"
            android:text="500원"
            android:textColor="#0aab00"
            android:textSize="13sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>