<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    android:background="#FFFFFF">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/ToolbarMyViewSettingWithdraw"
        android:theme="@style/ToolbarTheme"
        android:background="@color/white"
        app:titleTextColor="@color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/main_font_sb"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:lineSpacingExtra="3.3sp"
            android:layout_gravity="center_horizontal"
            android:text="패널탈퇴"
            android:id="@+id/MyViewSettingWithdraw_Title"
            android:textSize="20sp"/>
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/MyViewSettingWithdraw_MainContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="35dp"
            android:layout_marginTop="20sp" >

            <TextView
                android:id="@+id/MyViewSettingWithdraw_NoticeText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:text="정말 떠나시는 건가요?"
                android:textColor="#000000"
                android:textSize="15sp"
                android:fontFamily="@font/main_font_m"/>

            <TextView
                android:id="@+id/MyViewSettingWithdraw_NoticeText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="탈퇴 시 정산 예정 금액은 지급되지 않습니다."
                android:textSize="15sp"
                android:textColor="#0aab00"
                android:fontFamily="@font/main_font_b" />

            <TextView
                android:id="@+id/MyViewSettingWithdraw_CurrentReward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:text="현재 정산 예정 금액 1300원"
                android:textSize="15sp"
                android:textColor="#707070"
                android:fontFamily="@font/main_font_b" />

            <TextView
                android:id="@+id/MyViewSettingWithdraw_ReasonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25sp"
                android:text="서베이지를 떠나시는 이유를 알려주세요.\n이유를 알려주시면, 참고하여 더 발전하겠습니다!"
                android:textSize="14sp"
                android:textColor="#000000"
                android:lineSpacingExtra="4sp"
                android:fontFamily="@font/main_font_m"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/MyViewSettingWithdraw_Reason1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="5sp"
                    android:buttonTint="#0aab00"
                    android:text="설문이 너무 적어서"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:fontFamily="@font/main_font_m" />

                <CheckBox
                    android:id="@+id/MyViewSettingWithdraw_Reason2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="5sp"
                    android:buttonTint="#0aab00"
                    android:text="설문당 지급액이 너무 적어서"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:fontFamily="@font/main_font_m" />

                <CheckBox
                    android:id="@+id/MyViewSettingWithdraw_Reason3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="5sp"
                    android:buttonTint="#0aab00"
                    android:text="알림이 너무 많아서"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:fontFamily="@font/main_font_m" />

                <CheckBox
                    android:id="@+id/MyViewSettingWithdraw_Reason4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="5sp"
                    android:buttonTint="#0aab00"
                    android:text="시간이 없어서"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:fontFamily="@font/main_font_m" />

                <CheckBox
                    android:id="@+id/MyViewSettingWithdraw_Reason5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="5sp"
                    android:buttonTint="#0aab00"
                    android:text="필요를 못느껴서"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:fontFamily="@font/main_font_m" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:orientation="vertical"
                android:layout_marginTop="35sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="비밀번호"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:fontFamily="@font/main_font_sb" />

                <EditText
                    android:id="@+id/MyViewSettingWithdraw_PwInput"
                    android:layout_width="match_parent"
                    android:layout_height="55sp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10sp"
                    android:paddingLeft="15sp"
                    android:background="@drawable/custom_input"
                    android:hint="@string/MyViewSettingWithdraw_PwInput"
                    android:textSize="15sp"
                    android:fontFamily="@font/main_font_m"
                    android:inputType="textPassword" />


            </LinearLayout>



            <Button
                android:id="@+id/MyViewSettingWithdraw_WithdrawBtn"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginVertical="35sp"
                android:background="@drawable/register_button"
                android:text="@string/MyViewSettingWithdraw_WithdrawBtn"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/main_font_b"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>