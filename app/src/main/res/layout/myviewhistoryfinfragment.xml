<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/MyViewHistory_FinContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:paddingRight="40dp">

            <TextView
                android:id="@+id/MyViewHistory_FinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정산 완료 금액"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/MyViewHistory_FinAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,500원"
                android:textSize="25dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/MyViewHistory_FinItemContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/MyViewHistory_FinItem"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/MyViewHistory_FinItemDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20.12.30" />

                    <TextView
                        android:id="@+id/MyViewHistory_FinItemTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="서베이지 First Survey" />

                </LinearLayout>

                <TextView
                    android:id="@+id/MyViewHistory_FinItemReward"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:text="200"
                    android:textColor="@color/white"
                    android:background="@color/black"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>