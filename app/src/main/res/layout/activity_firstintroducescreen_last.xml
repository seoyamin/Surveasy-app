<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingStart="30dp"
    android:paddingEnd="30dp">

    <ImageView
        android:id="@+id/FirstIntroduceScreen_Image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars" />
    <TextView
        android:id="@+id/FirstIntroduceScreen_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FirstIntroduceScreen FirstIntroduceScreen FirstIntroduceScreen "
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/FirstIntroduceScreen_StartBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="시작하기"
        />

    <TextView
        android:id="@+id/FirstIntroduceScreen_LookAround"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="둘러보기"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:layout_marginTop="20dp" />


</LinearLayout>